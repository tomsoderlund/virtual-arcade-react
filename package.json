{
  "name": "virtual-arcade-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn devs\" \"yarn devc\"",
    "devc": "react-scripts start",
    "devs": "nodemon -w server -w package.json server/server.js",
    "build": "react-scripts build",
    "heroku-postbuild": "yarn build",
    "start": "node server/server.js",
    "test": "echo 'Running Standard.js and Jasmine unit tests...\n' && yarn lint && yarn unit",
    "eject": "react-scripts eject",
    "lint": "standard",
    "fix": "standard --fix"
  },
  "proxy": "http://localhost:3333",
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "ignore": [
      ".next"
    ],
    "globals": [
      "beforeAll",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jasmine",
      "spyOn",
      "fetch"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "express": "^4.16.4",
    "path": "^0.12.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11",
    "standard": "^12.0.1"
  }
}
